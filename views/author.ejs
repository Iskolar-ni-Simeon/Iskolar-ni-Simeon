<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= author.name %> | Iskolar ni Simeon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/author.css">
</head>
<body>
    <%- include('_header.ejs') %>
    <div class="outer-container">
        <div class="row">
            <div class="text-center ml-5">
                <p class="display-5 text-left mt-5 fw-bold">Theses authored by: <i><%= author.name %></i></p>
                <p class="text-muted">Found <%= author.theses.length %> <%= (author.theses.length > 1 ? 'theses' : 'thesis') %>: </p>
            </div>
        </div>
        <div class="row mt-5">
            <div class="results-container d-flex justify-content-center flex-wrap">
                <div class="results-inner-container">
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const theses = <%- JSON.stringify(author.theses || []) %>; // THIS IS NOT AN ERROR HUHUHU

            console.log(theses);

            const container = document.querySelector('.results-inner-container');

            if (theses.length === 0) {
                let alert = document.createElement('div');
                alert.className = 'alert alert-warning alert-dismissible fade show';
                alert.innerHTML = `<strong>Error</strong>: No theses found authored by "<b><i><%= author.name %></i></b>". 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                container.appendChild(alert);
            } else {
                theses.forEach(thesis => {
                    console.log(thesis.authors)
                    let card = document.createElement('div');
                    card.className = 'card';
                    card.innerHTML = `
                        <div class="card-body">
                            <h5 class="card-title">${thesis.title}</h5>
                            <p class="card-text text-truncate">${thesis.abstract}</p>
                            <a href="/thesis/${thesis.id}" class="btn btn-success">Read thesis</a>
                        </div>
                        <div class="card-footer text-muted">
                            <b>Authors:</b> ${thesis.authors.map(author => formatName(author)).join(', ')}<br>
                            <b>Published:</b> ${thesis.year}
                        </div>
                    `;
                    container.appendChild(card);
                });

                const cards = document.querySelectorAll('.card');
                cards.forEach(card => {
                    setTimeout(() => {
                        card.classList.add('animate');
                    }, 100);
                });
            }
        });

        function formatName(name) {
            const parts = name.split(' ');
            const lastName = parts.pop();
            const initials = parts.map(part => part.charAt(0) + '.').join(' ');
            return `${lastName}, ${initials}`;
        }
    </script>
</body>
</html>