        </symbol>
    </svg>

    <%- include('_header.ejs') %>
    
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg thesis">
                <h1><%= thesis.title %></h1>
                <p class="abstract"><%= thesis.abstract %></p>
            </div>
            <div class="col-12 col-lg card">
                <div class="card-title"></div>
                <div class="card-body">
                    <b>Author/s:</b>
                    <ul class="metadata">
                        <% thesis.authors.forEach(author => { %>
                            <li class="submeta"><a href="https://iskolar-ni-simeon.vercel.app/author/<%= author.id %>"><%= author.name %></a></li>
                        <% }) %>
                    </ul>
                    <b>Published:</b>
                    <ul class="metadata">
                        <li class="submeta"><%= thesis.year %></li>
                    </ul>
                    <b>Keywords:</b>
                    <ul class="metadata">
                        <% thesis.keywords.forEach(keyword => { %>
                            <li class="submeta"><a href="https://iskolar-ni-simeon.vercel.app/keyword/<%= keyword.id %>"><%= keyword.keyword %></a></li>
                        <% }) %>
                    </ul>

                    <div class="card-utils d-flex justify-content-center">
                        <button class="btn submeta read">
                            Read
                        </button>
                        <button class="btn submeta save">
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    </div>
    <%- include('_footer.ejs') %>
    
</body>
</html>
