<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title><%= thesis.title %> | Iskolar ni Simeon</title>
    <link rel="stylesheet" href="/css/thesis.css">
</head>
<body>
    <%- include('_header.ejs') %>
    
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg thesis">
                <h1><%= thesis.title %></h1>
                <p class="abstract"><%= thesis.abstract %></p>
            </div>
            <div class="col-12 col-lg card">
                <div class="card-title"></div>
                <div class="card-body">
                    <b>Author/s:</b>
                    <ul class="metadata">
                        <% thesis.authors.forEach(author => { %>
                            <li class="submeta"><a href="https://iskolar-ni-simeon.vercel.app/author/<%= author.id %>"><%= author.name %></a></li>
                        <% }) %>
                    </ul>
                    <b>Published:</b>
                    <ul class="metadata">
                        <li class="submeta"><%= thesis.year %></li>
                    </ul>
                    <b>Keywords:</b>
                    <ul class="metadata">
                        <% thesis.keywords.forEach(keyword => { %>
                            <li class="submeta"><a href="https://iskolar-ni-simeon.vercel.app/keyword/<%= keyword.id %>"><%= keyword.keyword %></a></li>
                        <% }) %>
                    </ul>

                    <div class="card-utils d-flex justify-content-center">
                        <button class="btn submeta read" onclick="window.location = '/read/<%= thesisId %>'">
                            Read
                        </button>
                        <button class="btn submeta save">
                            <span class="savedStatus"><span id="loader" class="spinner-border spinner-border-sm text-success" role="status" aria-hidden="true"></span></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    </div>
    <%- include('_footer.ejs') %>
    
</body>
<script>
    const thesisId = '<%= thesis.id %>';
    console.log('Thesis ID:', thesisId);

    let savedTheses = localStorage.getItem('savedTheses');
    savedTheses = savedTheses ? JSON.parse(savedTheses) : [];
    console.log('Saved Theses from LocalStorage:', savedTheses);

    // Ensure that savedTheses is an array before using array methods
    if (!Array.isArray(savedTheses)) {
        savedTheses = [];
    }

    const savedStatus = document.querySelector('.savedStatus');
    const loader = document.querySelector('#loader');
    let status;

    if (savedTheses.includes(thesisId)) {
        savedStatus.innerHTML = 'Saved';
        status = 'remove';
    } else {
        savedStatus.innerHTML = 'Save';
        status = 'add';
    }
    console.log('Initial Status:', status);

    savedStatus.addEventListener('click', () => {
        console.log('Save button clicked');
        loader.style.display = 'inline-block';
        savedStatus.textContent = '';

        fetch('<%- server_api %>/userlibrary', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                thesisId: thesisId,
                method: status,
                userId: '<%- userId %>'
            }),
            'credentials': 'include'
        }).then(response => {
            console.log('Response received:', response);
            if (response.ok) {
                if (status === 'add') {
                    savedTheses.push(thesisId);
                    savedStatus.innerHTML = 'Saved';
                    status = 'remove';
                } else {
                    savedTheses.splice(savedTheses.indexOf(thesisId), 1);
                    savedStatus.innerHTML = 'Save';
                    status = 'add';
                }
                console.log('Updated Status:', status);
                localStorage.setItem('savedTheses', JSON.stringify(savedTheses));
            }
            loader.style.display = 'none';
        }).catch(error => {
            console.error('Error:', error);
            loader.style.display = 'none';
        });
    });

</script>

</html>
